#include <stdio.h>

int derangements(int n) {
  if (n == 0) {
    return 1;
  } else if (n == 1) {
    return 0;
  } else {
    return (n - 1) * (derangements(n - 1) + derangements(n - 2));
  }
}

int main() {
  int n;

  printf("Введите количество писем: ");
  scanf("%d", &n);

  printf("Количество способов неправильной рассылки: %d\n", derangements(n));

  return 0;
}
